@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Data.Models;
@{
    ViewData["Title"] = "Size";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DbSize>
<div class="cp0">
    Danh Sách Size Sản Phẩm
</div>
<div class="h-cp1">
    <div class="h-cp-f">
        <div class="h-cp-up">
            <div class="bt-c"><a href="@Url.Action("TaoSize","Admin")">Thêm size Mới</a></div>
            <div class="bt-c"><a href="">In dữ liệu </a></div>
            <div class="bt-c"><a href="">Xuất Excel</a></div>
            <div class="bt-c"><a href="">Xuất PDF</a></div>
        </div>
        <div class="h-cp-mid">
            <div class="messages">
                @TempData["Message"]
            </div>
            <div>
                <input class="form-search" type="text" placeholder="Tìm Kiếm Size/ Tên Size . . .">
            </div>
            <table class="h-table">
                <thead>
                    <tr>
                        <th>Mã Kích cỡ</th>
                        <th>Tên Kích cỡ</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var prd in Model)
                        {
                            <tr>
                                <td>@prd.SizeId</td>
                                <td>@prd.NameSize</td>
                                <td>
                                    <a href="@Url.Action("XoaSize", new { idsize = prd.SizeId })" onclick="deletes(event)" style="color: #000;">Xóa</a>
                                    <a asp-action="suasize" asp-route-idsize="@prd.SizeId" style="color: black;">Sửa</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">"trống!"</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    function deletes(event) {
        event.preventDefault();
        var userConfirmed = confirm("Bạn có chắc chắn muốn size này?");
        if (userConfirmed) {
            var url = event.currentTarget.getAttribute("href");
            window.location.href = url;
        }
    }
</script>

