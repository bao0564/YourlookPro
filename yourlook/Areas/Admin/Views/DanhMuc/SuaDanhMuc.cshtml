@model Data.Models.DbDanhMuc
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "SuaDanhMuc";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="menu-cp">
    <div class="cp0">
        Sửa Danh Mục
    </div>
    <div class="h-cp1">
        <div class="h-cp-up">
            <div style="display:flex;align-items:center;padding-top:15px">
                <a asp-action="DanhMuc"><img style="height:20px" src="\icon\drop left.svg" /> </a>
            </div>
        </div>
        <form method="post" asp-action="SuaDanhMuc">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaDm" />
            <div class="row">
                <div class="col-6">
                    <label class="control-label">Tên Danh Mục</label>
                    <input asp-for="TenDm" class="form-control" />
                    <span asp-validation-for="TenDm" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <label class="control-label">Ảnh</label>
                    <input type="file" asp-for="AnhDaiDien" class="form-control" />
                    <span asp-validation-for="AnhDaiDien" class="text-danger"></span>
                </div>

                <div class="col-6">
                    <label asp-for="MaDmcha" class="control-label"></label>
                    <input asp-for="MaDmcha" class="form-control" />
                    <span asp-validation-for="MaDmcha" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <label asp-for="CreateDate" class="control-label"></label>
                    <input asp-for="CreateDate" class="form-control" />
                    <span asp-validation-for="CreateDate" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <label asp-for="CreateBy" class="control-label"></label>
                    <input asp-for="CreateBy" class="form-control" />
                    <span asp-validation-for="CreateBy" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <label asp-for="ModifiedDate" class="control-label"></label>
                    <input asp-for="ModifiedDate" class="form-control" />
                    <span asp-validation-for="ModifiedDate" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <label asp-for="ModifiedBy" class="control-label"></label>
                    <input asp-for="ModifiedBy" class="form-control" />
                    <span asp-validation-for="ModifiedBy" class="text-danger"></span>
                </div>                
            </div>
            <div class="h-cp-dow">
                <div class="bt-ar">
                    <input type="submit" value="Lưu Danh Mục" class=" btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
