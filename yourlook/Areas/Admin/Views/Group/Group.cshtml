@using Data.Models;
@using X.PagedList.Mvc.Core;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Group";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model X.PagedList.IPagedList<DbGroup>
<div class="cp0">
    Danh Sách Sản Phẩm
</div>
<div class="h-cp1">
    <div class="h-cp-f">
        <div class="h-cp-up">
            <div class="bt-c"><a href="@Url.Action("TaoNhom", "Admin")">Tạo nhóm mới</a></div>
            <div class="bt-c"><a href="">In dữ liệu </a></div>
            <div class="bt-c"><a href="">Xuất Excel</a></div>
            <div class="bt-c"><a href="">Xuất PDF</a></div>
        </div>
        <div class="h-cp-mid">
            @*  <div>
            @TempData["Message"]
            </div> *@
            <div>
                <input class="form-search" type="text" placeholder="Tìm Kiếm Mã Nhóm/ Tên Nhóm . . .">
            </div>
            <table class="h-table">
                <thead>
                    <tr>
                        <th>Mã Nhóm</th>
                        <th>Tên Nhóm</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var prd in Model)
                        {
                            <tr>
                                <td>@prd.NhomId</td>
                                <td>@prd.GroupName</td>
                                <td>
                                    <a asp-action="XoaSanPham" asp-route-masp="@prd.NhomId" style="color: #000;">Xóa</a>
                                    <a asp-action="SuaSanPham" asp-route-masp="@prd.NhomId" style="color: black;">Sửa</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                         <td colspan="3">Nhóm trống</td>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@Html.PagedListPager(Model, page => Url.Action("Group", "Group", new { page = page }))

