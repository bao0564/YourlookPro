@using Data.Models;
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "AllProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model X.PagedList.IPagedList<ViewAllDetail>
<div class="list-ad mar150_container" ">
	<div class="img-ad" style="padding: 0">
		<img src="/logo/hot-product.png" style="background-color: #2f3640" alt="" />
	</div>
</div>
<div class="cate" style="margin:0">
	<div class="row">
		<div class="col">
			<div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>
				<div class="box-flex">
					@foreach(var prd in Model)
					{
						<div class="product-item ">
							@if (prd.GiamGia > 0)
							{
								<div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-@prd.GiamGia%</span></div>
							}
							else
							{
								<div></div>
							}
							<div class="product discount ">
								<div class="product_image">
                                    <a asp-controller="Home" asp-action="ProductDetail" asp-route-masp="@prd.MaSp"><img src="@Url.Content("/img/"+prd.AnhSp)" alt=""></a>
									<div class="box-inf-cl-s">
										<div>
											<div class="fljct" style="padding:10px">Phân Loại</div>
											<div class="fljct flct" style="margin-bottom:10px">
												Size:
												@foreach (var sz in prd.Sizes)
												{
													<button>@sz.NameSize</button>
												}
											</div>
											<div class="fljct flct">
												Màu:
												@foreach (var cl in prd.Colors)
												{
													<button style="background-color:@cl.MaMau"></button>
												}
											</div>
										</div>
									</div>
								</div>
								<div class="favorite" data-id="@prd.MaSp" style="font-size:20px">
									@if (prd.IFavorite == true)
									{
										<i class="fa-solid fa-heart" style="color: #2f3640;"></i>
									}
									else
									{
										<i class="fa-regular fa-heart" style="color: #2f3640;"></i>
									}
								</div>
								<div class="product_info">
									<h6 class="product_name">
										<a asp-controller="Home" asp-action="ProductDetail" asp-route-masp="@prd.MaSp">@prd.TenSp</a>
									</h6>
									@if (prd.PriceMax == prd.PriceMin)
									{
										<div class="product_price">@string.Format("{0:N0}", prd.PriceMax)</div>
									}
									else
									{
										<div class="product_price">@string.Format("{0:N0}", prd.PriceMin)<span>@string.Format("{0:N0}", prd.PriceMax)</span></div>
									}
								</div>
							</div>
							@* <div class="red_button add_to_cart_button">
								<a class="btnAddToCart" style="color:#fff" data-id="@prd.MaSp">
									Thêm Vào Giỏ Hàng<i class="fa-solid fa-cart-plus fa-flip-horizontal fa-lg" style="color: #ffffff;padding:10px"></i>
								</a>
							</div> *@
							<div class="red_button add_to_cart_button">
								<a asp-controller="Home" asp-action="ProductDetail" asp-route-masp="@prd.MaSp">
									Xem Chi Tiết<i class="fa-solid fa-cart-plus fa-flip-horizontal fa-lg" style="color: #ffffff;padding:10px"></i>
								</a>
							</div>
						</div>
					}			
				</div>
			</div>
		</div>
	</div>
</div>
@Html.PagedListPager(Model, page=>Url.Action("AllProduct","Home",new{page=page}))