@using Data.Models
@{
    ViewData["Title"] = "UserDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model DbKhachHang
<main class="mar150_container customer" style="margin-bottom:150px">
    <div class="body-customer dpf">
        <div class="address-customer">
            <div class="box-customer" style="background-color:#000;color:#fff">
                <div>
                    <h3 style="color:#fff">Thông Tin Địa Chỉ </h3>
                    <div style="color:#fff">vui lòng điền thông tin địa chỉ cần giao hàng của bạn</div>
                </div>
                <div class="box-customer" style="background-color:#fff">
                    <div class="box-customer" style="background-color:#fff">
                        <div class="space-address">
                            <div class="box-address"><input type="text" name="TenKh" id="TenKh" placeholder="Tên người nhận" required /></div>
                            <div class="box-address"><input type="text" name="Sdt" id="Sdt" placeholder="SDT người nhận" required /></div>
                        </div>
                        <div class="space-address">
                            <div class="box-address">
                                <input type="text" name="City" id="City" placeholder="Thành Phố...">
                            </div>
                            <div class="box-address">
                                <input type="text" name="District" id="District" placeholder="Quận/Huyện...">
                            </div>
                            <div class="box-address">
                                <input type="text" name="Ward" id="Ward" placeholder="Phường/Xã...">
                            </div>
                        </div>
                        <div class="space-address">
                            <div class="box-address">
                                <input type="text" name="DiaChi" id="DiaChi" placeholder="Địa chỉ chi tiết" />
                            </div>
                        </div>
                        <div class="space-address">
                            <div class="box-address">
                                <input type="text" name="GhiChu" id="GhiChu" placeholder="Ghi chú cho đơn hàng" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="inf-customer box-customer" style="">
            <div class="title" style="padding-bottom:20px">
                <div class="img-customer" style="">
                    @if(Model.Img !=null){
                        <img style="" src="@Url.Content("/logo/"+Model.Img)" />
                    }
                    else
                    {
                        <img style="" src="@Url.Content("../logo/images (11).jpg")" />
                    }
                </div>
                <div>
                    <h4>Thông Tin Khách Hàng</h4>
                    <h5 class="customer-name" style="">@Model.TenKh</h5>
                </div>
            </div>
            <div class="dpf jcc" style="">
                <div style="width:80%">
                    <div class="customer-title"><h5>Họ Tên :</h5>@Model.TenKh</div>
                    <div class="customer-title"><h5>Ngày sinh :</h5>20/11/2002</div>
                    <div class="customer-title"><h5>Giới Tính :</h5>@Model.GioiTinh</div>
                    <div class="customer-title"><h5>Email :</h5>@Model.Email</div>
                    <div class="customer-title"><h5>Số điện thoại:</h5>@Model.Sdt</div>
                </div>
            </div>
            <div class="new-inf" style="">
                <a style="padding:10px">Sửa thông tin ></a>
            </div>
        </div>
    </div>
</main>