@using Data.Models;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model DbKhachHang
<main class="login-body mar_container">
    <div class="font-login">
        <div style="display:flex; justify-content:space-around;align-items:center">
            <div>
                <h2>Đăng Nhập</h2>
            </div>
        </div>
        <p style="border-top:1px solid #000">Bằng:</p>
        <div class="title">
            <div style="display:flex;align-items:center;justify-content:space-between">
                <button><img src="/icon/google.png" alt="" /></button>
                <button><img src="/icon/Facebook.png" alt="" /></button>
            </div>
            <div class="logo-login">
                <img src="/logo/logo.png" alt="">
                <p>Luôn mang đến cho bạn nhứng sản phẩm chất lượng</p>
            </div>
        </div>
        <p>Hoặc:</p>
        @using (Html.BeginForm("Login", "Access", FormMethod.Post))
        {
            <div class="space-address">
                <div class="inp">
                   @*  <input type="text" name="" id="" placeholder="Email/SĐT..." /> *@
                    @Html.TextBoxFor(x => x.Email, new {@class="input", placeholder = "Email/SĐT...", type = "text",required="required",autofocus="autofocus" })
                </div>
            </div>
            <div class="space-address">
                <div class="inp">
                    @* <input type="text" name="" id="" placeholder="Mật Khẩu..." /> *@
                    @Html.TextBoxFor(x => x.Passwords, new { @class = "input", placeholder = "Mật Khẩu...", type = "text", required = "required", autofocus = "autofocus" })
                </div>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="text-danger" style="display:flex;justify-content:center">
                    @Html.ValidationSummary(true)
                </div>
            }
            <div class="btn-login">
                <button class="btn-login" type="submit">Đăng Nhập</button>
            </div>
        }
        <div style="margin: 25px 0;display: flex;justify-content: space-between;">
            <a href="">Quên mật khẩu</a>
            <a asp-action="Register">Đăng ký tài khoản</a>
        </div>
    </div>
</main>